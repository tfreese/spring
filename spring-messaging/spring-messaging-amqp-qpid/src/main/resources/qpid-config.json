{
	"name": "${broker.name}",
	"modelVersion": "7.1",
	"authenticationproviders": [
		{
			"name": "noPassword",
			"type": "Anonymous",
			"secureOnlyMechanisms": []
		},
		{
			"name": "passwordFile",
			"type": "PlainPasswordFile",
			"path": "src${file.separator}main${file.separator}resources${file.separator}passwd.txt",
			"secureOnlyMechanisms": [],
			"preferencesproviders": [
				{
					"name": "fileSystemPreferences",
					"type": "FileSystemPreferences",
					"path": "${qpid.work_dir}${file.separator}user.preferences.json"
				}
			]
		}
	],
	"ports": [
		{
			"name": "AMQP",
			"port": "${qpid.amqp_port}",
			"authenticationProvider": "passwordFile",
			"protocols": [
				"AMQP_0_10",
				"AMQP_0_8",
				"AMQP_0_9",
				"AMQP_0_9_1",
				"AMQP_1_0"
			],
			"virtualhostaliases": [
				{
					"name": "nameAlias",
					"type": "nameAlias"
				},
				{
					"name": "defaultAlias",
					"type": "defaultAlias"
				},
				{
					"name": "hostnameAlias",
					"type": "hostnameAlias"
				}
			]
		}
	],
	"virtualhostnodes": [
		{
			"name": "default",
			"type": "Memory",
			"defaultVirtualHostNode": "true",
			"virtualHostInitialConfiguration": "{\"type\": \"Memory\", \"nodeAutoCreationPolicies\": [{\"pattern\":\".*\",\"createdOnPublish\":\"true\",\"createdOnConsume\":\"true\",\"nodeType\":\"queue\",\"attributes\":{}}] }"
		}
	]
}
